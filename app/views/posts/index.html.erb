

<p style="color: green"><%= notice %></p>
 <br><br>
 <a data-turbo="true" data-turbo-frame="frame_modal" class="btn btn-primary" href="<%= new_post_path %>">New Posts</a>
  <div id="ruby">
    
  
    <h2>Posts</h2>
    
      <%= search_form_for @q, url: posts_path do |form| %>
        <div class= "form-group mt-4">
          <%= form.label :name%>
          <%= form.search_field :name_cont, class:"form_control"%>
        </div>
        
        <div class="from-group mt-3">
          <%= form.submit class: "btn btn-primary"%>
      <%end%>
        </div>

        <%= simple_form_for :post do |f|%>
        <h2 class="mt-4 ">chosen</h2>
          <div class="mb-4"> </div>
           <%student_list = Post.all.map{|p| [p.name, p.id]}%>
           <%selected = Post.first%>
           <%= f.input :id, label: 'posts', collection: student_list, selected: selected, input_html: { class: 'chosen', multiple: true, data: { placeholder: "Select"} } %>
        <% end %>

      <%= render "posts", posts: @posts%>

  </div>




